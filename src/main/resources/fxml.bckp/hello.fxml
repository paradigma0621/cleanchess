<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>

<GridPane hgap="15" prefHeight="475.0" prefWidth="594.0" styleClass="login" vgap="15" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/11.0.1" fx:controller="helloFX.controladorFXML">  <!-- no campo fx:controller diz qual a classe controladora -->
	
	<padding>
		<Insets bottom="40" left="40" right="40" top="40" />     <!-- Define espaçamento sem relação às 
                                                                            beiradas da janela. obs: cada tag 
                                                                            instância um objeto. Aqui é instânciado
                                                                            um objeto Insets-->
	</padding>
	
	<columnConstraints> <!-- Aqui ele vai instanciar 2 colunas -->
		<ColumnConstraints halignment="right" minWidth="60" prefWidth="60" />
		<ColumnConstraints hgrow="ALWAYS" maxWidth="Infinity" prefWidth="200" />
	</columnConstraints>

	<Label styleClass="login-titulo" text="Seja Bem Vindo" GridPane.columnIndex="0" GridPane.columnSpan="2" GridPane.halignment="CENTER" GridPane.rowIndex="0">   <!-- A label vai ocupar 2 colunas -->
		
		<GridPane.margin>
			<Insets bottom="20" top="20" />
		</GridPane.margin>
	</Label>
	
	<Label fx:id="labelEmail" styleClass="login-form-label" text="E-mail:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
	<TextField fx:id="campoEmail" GridPane.columnIndex="1" GridPane.rowIndex="1">
	
	</TextField>	
		
	<Label styleClass="login-form-label" text="Senha:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
	<PasswordField fx:id="campoSenha" GridPane.columnIndex="1" GridPane.rowIndex="2">
	
	</PasswordField>
	
	<Button onAction="#entrar" styleClass="login-form-botao" text="Entrar" GridPane.columnIndex="0" GridPane.columnSpan="2" GridPane.halignment="CENTER" GridPane.rowIndex="3">  <!-- chama o método "entrar" quando clicamos no botão -->
		
		<GridPane.margin>
			<Insets bottom="20" top="20" />
		</GridPane.margin>
	</Button>
   <rowConstraints>
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
   </rowConstraints>
	
</GridPane>
